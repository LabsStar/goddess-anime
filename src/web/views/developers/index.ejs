<!DOCTYPE html>
<html lang="en">

<head>
    <title> Goddess Anime Cards :: Developer Applications </title>
    <meta property="og:type" content="website">
    <meta property="og:site_name" content="Goddess Anime Cards">
    <meta property="og:title" content="Goddess Anime Cards">
    <meta property="og:description" content="View all of the applications you have made for Goddess Anime Cards.">
    <meta property="og:image"
        content="https://rare-gallery.com/mocahbig/451099-anime-c-programming-New-Game-blue-eyes-blonde.jpg">
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="Goddess Anime Cards">
    <meta name="twitter:creator" content="Goddess Anime Cards">
    <meta name="twitter:card" content="summary_large_image">
    <meta content="#52FF33" data-react-helmet="true" name="theme-color" />

    <style>
        @keyframes blurData {
            0% {
                filter: blur(5px);
            }

            100% {
                filter: blur(5px);
            }
        }

        @keyframes unBlurData {
            0% {
                filter: blur(0px);
            }

            100% {
                filter: blur(0px);
            }
        }

        .sensitveData {
            animation: blurData 1s infinite;
        }

        .sensitveData:hover {
            animation: unBlurData 1s infinite;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            color: #f7f1f1;
        }

        .cardErrorMessage {
            /* Make it center */
            margin: 0 auto;
            /* Make it color white */
            color: white;
            /* Bring it down a little */
            margin-top: 100px;
            /* Make it bigger */
            font-size: 30px;
        }

        .separator {
            width: 100%;
            height: 1px;
            content: " | ";
            margin: 20px 0;
        }
    </style>
</head>

<body>
    <%- include ("../templates/header.ejs") %>

        <!-- main content -->
        <main class="main">
            <div class="container">
                <div class="row row--grid">
                    <!-- breadcrumb -->
                    <div class="col-12">
                        <ul class="breadcrumb">
                            <li class="breadcrumb__item"><a href="/">Home</a></li>
                            <li class="breadcrumb__item">Developers</li>
                            <li class="breadcrumb__item breadcrumb__item--active">
                                Applications
                            </li>
                        </ul>
                    </div>
                    <!-- end breadcrumb -->

                    <!-- error -->
                    <div class="col-12">
                        <div class="page-404">
                            <div class="page-404__wrap">



                                <% if (applications.length===0) { %>
                                    <span class="text-center cardErrorMessage">
                                        There are no applications! <a href="/developers/applications/new">Create
                                            one!</a>
                                    </span>
                                    <% } else { %>

                                        <% applications.forEach(application=> { %>

                                            <div class="col-12 col-sm-6 col-lg-4 col-xl-3">
                                                <!-- card -->
                                                <div class="card">
                                                    <a href="/developers/applications/<%= application.client_id %>"
                                                        class="card__cover">
                                                        <img src="<%= application.image %>" alt="">
                                                    </a>
                                                    <h3 class="card__title"><a
                                                            href="/developers/applications/<%= application.client_id %>">
                                                            <%= application.name %>
                                                        </a></h3>

                                                    <div class="card__info">
                                                        <p id="date-made" style="color:#fff;">
                                                            <%= application.createdAt %>
                                                        </p>
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- end card -->
                                            <% }) %>
                            </div>
                            <% } %>
                        </div>
                    </div>
                </div>
                <!-- end error -->
            </div>
            </div>
        </main>

        <script>
            // Get every date made
            var dateMade = document.querySelectorAll("#date-made");

            // Loop through every date made

            dateMade.forEach((date) => {
                // Get the date
                var dateMade = date.innerHTML;

                // Convert it to a date
                var dateMade = new Date(dateMade);

                // Get the current date
                var currentDate = new Date();


                // Get the difference between the two dates
                var difference = currentDate - dateMade;

                // Convert the difference to days
                var difference = difference / 1000 / 60 / 60 / 24;

                // Round the difference
                var difference = Math.round(difference);

                // If the difference is 0, then it was made today
                if (difference === 0) {
                    date.innerHTML = "Made: Today";
                } else if (difference === 1) {
                    // If the difference is 1, then it was made yesterday
                    date.innerHTML = "Made: Yesterday";
                } else {
                    // If the difference is more than 1, then it was made more than a day ago
                    date.innerHTML = "Made: " + difference + " days ago";
                }
            });
        </script>




        <!-- end main content -->
        <%- include ("../templates/footer.ejs") %>

</body>

</html>