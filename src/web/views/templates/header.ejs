    </svg></button>

  <h4 class="sign__title">
    Connection lost
  </h4>

  <p class="modal__text">
    It seems that you have lost connection to the server. Please check your internet connection and try again.

    </br>
    Here are some things that could have happened:
  <ul class="number-list">
    <li>Server is down</li>
    <li>Server is restarting</li>
    <li>Server is under maintenance</li>
    <li>Api Error</li>
    <li>You have lost internet connection</li>
  </ul>

  <button class="sign__btn" type="button" onclick="neverShowPopup()">Never show this again</button>
  </p>
</div>


<script>

  const openModal = () => {
    $.magnificPopup.open({
      items: {
        src: '#ping-popup'
      },
      type: 'inline',
      preloader: false,
      modal: true,
      callbacks: {
        open: function () {
          $('.mfp-close').on('click', function () {
            $.magnificPopup.close();
          });
        }
      }
    });
  };

  const ping = () => {
    // Check if the user has internet connection
    // If not, show popup

    const internet = navigator.onLine;

    if (!internet) {
      if (!localStorage.getItem('neverShowPopup')) {
        openModal();
      }
      else {
        console.warn('User has disabled [Lost Connection] popup');
      }
    }
    else {
      console.log('User has internet connection');
    }
  };

  setInterval(ping, 10000);

  function neverShowPopup() {
    $.magnificPopup.close();
    localStorage.setItem('neverShowPopup', true);
  }
</script>
